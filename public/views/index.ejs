<!doctype html>
<html lang='en'>
<head>
  <% include partials/head %>
</head>
<body>
  <% include partials/header %>
  <div class='container'>
    <!-- LOCATIONS VIEW -->
    <div data-bind='page: { id: "start", title: "Webfoods 2.0"}'>
      <h3> Select a location &hellip; </h3>
      <!-- ko foreach: Data.locationRows -->
      <div class='row' data-bind='foreach: $data'>
        <div class='col-sm-6'>
          <div class='panel panel-info'>
            <!-- LOCATION HEADER -->
            <div class='panel-heading'>
              <h3 class='panel-title' data-bind='text: name'></h3>
            </div>
            <!-- LOCATION INFORMATION -->
            <div class='panel-body'>
              <ul class='hours-list' data-bind='foreach: hours'>
                <li data-bind='text: $data'></li>
              </ul>
            </div>
            <!-- LOCATION FOOTER -->
            <div class='panel-footer'>
              <a class='btn btn-default btn-block' data-bind='attr: {href: "#menus?location="+id}'>
                Menu/Order <i class='fa fa-fw fa-arrow-circle-right'></i>
              </a>
            </div>
          </div>
        </div>
      </div>
      <!-- /ko -->
    </div><!-- /LOCATIONS VIEW -->

    <!-- MENUS VIEW -->
    <div data-bind='
      page: {
        id: "menus",
        params: ["location"],
        title: "Webfoods 2.0 - Menus",
        fx: "slide",
        scrollToTop: true }'>
      <!-- ko foreach: Data.menus -->
      <h3 data-bind='text: menuName'></h3>
        <!-- ko foreach: items -->
        <div class='panel panel-default submenu-item'>
          <div class='panel-heading'><h3 class='panel-title' data-bind='text: description'></h3></div>
          <div class='panel-body'>
            <div class='media'>
              <div class='media-left'>
                <img data-bind='attr: { src: imageName }' data-failover="/assets/img/placeholder.png" />
              </div>
              <div class='media-body'>
                <div class='main-menu-item-description' data-bind='text: longDescription'></div>
              </div>
            </div>
          </div>
          <div class='panel-footer'>
            <a class='btn btn-default btn-block' data-bind='click: function() { $root.Data.selectItem(this); }' href='#modal-order' data-toggle='modal'>Order Now <i class='fa fa-fw fa-arrow-circle-right'></i>
            </a>
          </div>
        </div>
        <!-- /ko -->
      <!-- /ko -->
    </div><!-- /MENUS VIEW -->

    <!-- ORDER VIEW -->
    <div data-bind='page: { id: "order", title: "Webfoods 2.0 - order"}'>
      <p> order view </p>
    </div><!-- /ORDER VIEW -->
  </div>
  <% include partials/footer %>
</body>
</html>
